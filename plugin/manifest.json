{
    "name": "MediaUploader",
    "version": "1.0",
    "description": "Extension for uploading concrete media files to server",
    "permissions": ["storage", "contextMenus", "activeTab", "management"],
    "background": {
      "scripts": ["js/background.js"]
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "css": ["css/hover.css"],
        "js": ["js/content.js"]
      }
    ],
    "browser_action": {
      "default_popup": "html/popup.html"
     },
    "manifest_version": 2
  }