{
    "name": "MediaUploader",
    "version": "1.0",
    "description": "Extension for uploading concrete media files to server",
    "permissions": ["storage", "contextMenus", "activeTab"],
    "background": {
      "scripts": ["background.js"]
    },
    "content_scripts": [
      {
        "matches": [
          "<all_urls>"
        ],
        "js": ["content.js"]
      }
    ],
    "browser_action": {
      "default_popup": "popup.html"
     },
    "manifest_version": 2
  }